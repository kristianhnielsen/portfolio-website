---
import { Image } from "astro:assets";
import Heading from "../components/Heading.astro";
import PageLayout from "../layout/PageLayout.astro";
import WechatQR from "../assets/images/wechatQR.jpg";
---

<PageLayout
  title="WeChat"
  description="Reach out to Kristian Nielsen on WeChat."
>
  <main class="grid place-items-center gap-8">
    <Heading level="h1">Wechat</Heading>
    <address class="grid place-items-center gap-4 not-italic">
      <p>Search for my ID: <strong>kristiannielsen</strong></p>
      <Image
        src={WechatQR}
        alt="QR code for WeChat"
        class="aspect-square max-w-xs place-self-center rounded"
      />
    </address>
  </main>
</PageLayout>
