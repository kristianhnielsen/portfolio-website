---
import Heading from "../components/Heading.astro";
import PageLayout from "../layout/PageLayout.astro";
import Email from "../assets/images/icons/contact/Email.astro";
import Github from "../assets/images/icons/contact/Github.astro";
import LinkedIn from "../assets/images/icons/contact/LinkedIn.astro";
import Person from "../assets/images/icons/contact/Person.astro";
---

<PageLayout
  title="Contact"
  description="Want to get in touch? Find all the ways to Kristian Nielsen here."
>
  <main
    class="mx-4 mt-24 grid justify-items-center gap-8 md:grid-cols-2"
    aria-label="Main content"
    id="main-content"
  >
    <Heading level="h1">Contact</Heading>
    <address class="grid gap-8 not-italic">
      <ul class="flex flex-col gap-8" aria-label="Contact information">
        <li aria-label="Name">
          <p
            class="group flex items-center gap-4 transition-all hover:text-neutral-100"
          >
            <Person
              class="w-12 fill-none stroke-emerald-800 stroke-2 transition-all group-hover:stroke-emerald-400"
            />Kristian Hviid Nielsen
          </p>
        </li>
        <li aria-label="E-mail">
          <a
            href="mailto:hello@kristiannielsen.com"
            class="group flex items-center gap-4 [word-break:break-word] hover:text-neutral-100"
            ><Email
              class="w-12 fill-emerald-800 transition-all group-hover:fill-emerald-400"
            />hello@kristiannielsen.com</a
          >
        </li>
        <li aria-label="Github">
          <a
            href="https://github.com/kristianhnielsen/"
            target="_blank"
            rel="noopener noreferrer"
            class="group flex items-center gap-4 hover:text-neutral-100"
            ><Github
              class="w-12 fill-emerald-800 p-1 transition-all group-hover:fill-emerald-400"
            />@kristianhnielsen</a
          >
        </li>
        <li aria-label="LinkedIn">
          <a
            href="https://www.linkedin.com/in/kristian-hviid-nielsen/"
            target="_blank"
            rel="noopener noreferrer"
            class="group flex items-center gap-4 hover:text-neutral-100"
            ><LinkedIn
              class="w-12 fill-emerald-800 transition-all group-hover:fill-emerald-400"
            />/in/kristian-hviid-nielsen</a
          >
        </li>
      </ul>
    </address>
  </main>
</PageLayout>
